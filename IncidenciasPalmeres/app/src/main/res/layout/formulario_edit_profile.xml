<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="ID:" />
                <TextView
                    android:id="@+id/id_actual"
                    android:layout_column="2"
                    android:text=""
                    android:gravity="right"
                    android:singleLine="true"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="@string/nombre" />
                <Button
                    android:id="@+id/Nombre_actual"
                    android:layout_column="2"
                    android:text=""
                    android:gravity="right"
                    android:singleLine="true"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="@string/gmail" />
                <Button
                    android:id="@+id/Gmail_actual"
                    android:layout_column="2"
                    android:text=""
                    android:gravity="right"
                    android:singleLine="true"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="@string/dni" />
                <TextView
                    android:id="@+id/DNI_actual"
                    android:layout_column="2"
                    android:text=""
                    android:gravity="right"
                    android:singleLine="true"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="@string/ntel" />
                <Button
                    android:id="@+id/Ntel_actual"
                    android:layout_column="2"
                    android:text=""
                    android:gravity="right"
                    android:singleLine="true"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="@string/password" />

                <Button
                    android:id="@+id/pass_actual"
                    android:layout_column="2"
                    android:gravity="right"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:text="" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="@string/puesto" />
                <TextView
                    android:id="@+id/puesto_actual"
                    android:layout_column="2"
                    android:text=""
                    android:gravity="right"
                    android:singleLine="true"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="@string/permisos" />
                <TextView
                    android:id="@+id/permisos_actual"
                    android:layout_column="2"
                    android:text=""
                    android:gravity="right"
                    android:singleLine="true"/>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btncancel"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/btnsave"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/save" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>