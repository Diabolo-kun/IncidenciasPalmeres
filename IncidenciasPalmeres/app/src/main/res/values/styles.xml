<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>
    <style name="Lightmode" parent="ThemeOverlay.AppCompat.Light">
        <!-- Personaliza tu tema aquí para el modo claro -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="android:windowBackground">@color/colorBackgroundLight</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="Darkmode" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Personaliza tu tema aquí para el modo oscuro -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="android:windowBackground">@color/colorBackgroundNight</item>
        <item name="android:textColor">@color/colorTextNight</item>
    </style>
</resources>